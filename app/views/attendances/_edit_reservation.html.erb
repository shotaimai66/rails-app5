<% provide(:class_text, 'basic-info') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-body">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <!--ここからモーダルの中身-->
          <h1><%= @attendance.worked_on %>　家庭教師<%= @user.name %>さんの予約可能時間</h1>
          <!--ここからコピぺの改造-->
          <%= form_with(model: @user, url: attendances_update_one_day_user_path, local: true, method: :patch) do |f| %>
          <table class="table table-bordered table-condensed table-hover" id="table-attendances">
            <thead>
              <%
                css_class = 
                case $days_of_the_week[@attendance.worked_on.wday]
                when '土'
                  'text-primary'
                when '日'
                  'text-danger'
                end
              %>
              <tr>
                <th>日付</th>
                <th>曜日</th>
                <th>0時</th>
                <th>1時</th>
                <th>2時</th>
                <th>3時</th>
                <th>4時</th>
                <th>5時</th>
                <th>6時</th>
                <th>7時</th>
                <th>8時</th>
                <th>9時</th>
                <th>10時</th>
                <th>11時</th>
                <th>12時</th>
                <th>13時</th>
                <th>14時</th>
                <th>15時</th>
                <th>16時</th>
                <th>17時</th>
                <th>18時</th>
                <th>19時</th>
                <th>20時</th>
                <th>21時</th>
                <th>22時</th>
                <th>23時</th>
              </tr>
            </thead>
            <tbody>
                <!--チェックなし　０　チェックあり　１-->
                <%= f.fields_for @attendance do |af| %>
                  <td><%= @attendance.worked_on %></td>
                  <%= af.hidden_field :worked_on, :value => @attendance.worked_on %>
                  <td class="<%= css_class %>"><%= $days_of_the_week[@attendance.worked_on.wday] %></td>
                  <td><%= af.check_box :lesson_status_00 , prompt: "" %></td>  
                  <td><%= af.check_box :lesson_status_01 , prompt: "" %></td>  
                  <td><%= af.check_box :lesson_status_02 , prompt: "" %></td>  
                  <td><%= af.check_box :lesson_status_03 , prompt: "" %></td>  
                  <td><%= af.check_box :lesson_status_04 , prompt: "" %></td>  
                  <td><%= af.check_box :lesson_status_05 , prompt: "" %></td>  
                  <td><%= af.check_box :lesson_status_06 , prompt: "" %></td>  
                  <td><%= af.check_box :lesson_status_07 , prompt: "" %></td>  
                  <td><%= af.check_box :lesson_status_08 , prompt: "" %></td>  
                  <td><%= af.check_box :lesson_status_09 , prompt: "" %></td>  
                  <td><%= af.check_box :lesson_status_10 , prompt: "" %></td>  
                  <td><%= af.check_box :lesson_status_11 , prompt: "" %></td>  
                  <td><%= af.check_box :lesson_status_12 , prompt: "" %></td>  
                  <td><%= af.check_box :lesson_status_13 , prompt: "" %></td>  
                  <td><%= af.check_box :lesson_status_14 , prompt: "" %></td>  
                  <td><%= af.check_box :lesson_status_15 , prompt: "" %></td>  
                  <td><%= af.check_box :lesson_status_16 , prompt: "" %></td>  
                  <td><%= af.check_box :lesson_status_17 , prompt: "" %></td>  
                  <td><%= af.check_box :lesson_status_18 , prompt: "" %></td>  
                  <td><%= af.check_box :lesson_status_19 , prompt: "" %></td>  
                  <td><%= af.check_box :lesson_status_20 , prompt: "" %></td>  
                  <td><%= af.check_box :lesson_status_21 , prompt: "" %></td>  
                  <td><%= af.check_box :lesson_status_22 , prompt: "" %></td>  
                  <td><%= af.check_box :lesson_status_23 , prompt: "" %></td>
                  <%= af.hidden_field :user_id, :value => @user.id %>
                <% end %>
            </tbody>
          </table>
          <div class="center">
   　　　      <%= f.submit "確定する", class: "btn btn-lg btn-primary" %>
          </div>
          <% end %>
            <!--ここまでモーダルの中身-->
        </div>
      </div>
    </div>
  </div>
</div>